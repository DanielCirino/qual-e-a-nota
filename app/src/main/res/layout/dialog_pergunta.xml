<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_dialogo"
      android:orientation="vertical"
      android:padding="16dp">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/concert_one_regular"
        android:text="Pergunta xx"
        android:textAlignment="textStart"
        android:textColor="@color/colorLicoriceDark"
        android:textSize="32sp"
        android:gravity="start"
        android:layout_gravity="start" />

    <TextView
        android:id="@+id/tv_pergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/work_sans_regular"
        android:text="Seus dados são temporais (por dia, mês, ano etc?"
        android:textAlignment="textStart"
        android:textColor="@color/colorLicorice"
        android:textSize="20sp"
        android:gravity="start" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">


      <Button
          android:id="@+id/btn_opcao01"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginLeft="0dp"
          android:layout_marginRight="0dp"
          android:layout_marginTop="8dp"
          android:layout_weight="1"
          android:background="@drawable/bg_botao_verde"
          android:fontFamily="@font/concert_one_regular"
          android:text="Opção 01"
          android:textColor="@color/colorWhite"
          android:textSize="15sp"
          android:textStyle="bold" />

      <Button
          android:id="@+id/btn_opcao02"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginLeft="0dp"
          android:layout_marginRight="0dp"
          android:layout_marginTop="8dp"
          android:layout_weight="1"
          android:background="@drawable/bg_botao_cor_primaria"
          android:fontFamily="@font/concert_one_regular"
          android:text="Opção 2"
          android:textColor="@color/colorWhite"
          android:textSize="15sp"
          android:textStyle="bold" />

      <Button
          android:id="@+id/btn_opcao03"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginLeft="0dp"
          android:layout_marginRight="0dp"
          android:layout_marginTop="8dp"
          android:layout_weight="1"
          android:background="@drawable/bg_botao_amarelo"
          android:fontFamily="@font/concert_one_regular"
          android:text="Opção 03"
          android:textColor="@color/colorWhite"
          android:textSize="15sp"
          android:textStyle="bold" />

      <Button
          android:id="@+id/btn_opcao04"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginLeft="0dp"
          android:layout_marginRight="0dp"
          android:layout_marginTop="8dp"
          android:layout_weight="1"
          android:background="@drawable/bg_botao_roxo"
          android:fontFamily="@font/concert_one_regular"
          android:text="Opção 4"
          android:textColor="@color/colorWhite"
          android:textSize="15sp"
          android:textStyle="bold" />


      />


    </LinearLayout>


  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>